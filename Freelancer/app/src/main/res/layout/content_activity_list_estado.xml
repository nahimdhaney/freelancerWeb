<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edson.com.freelancer.Activity_List_Estado"
    tools:showIn="@layout/activity_list_estado">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/edit_buscar"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="7dp"
            android:drawableStart="?android:attr/actionModeFindDrawable"
            android:ems="10"
            android:hint="Buscar"
            android:background="#fff"
            android:inputType="textPersonName"
            android:paddingLeft="6dp"
            />

        <Button
            android:id="@+id/btn_buscar"
            android:layout_width="67dp"
            android:layout_height="50dp"
            android:background="#fff"
            android:drawableTint="@color/colorAccent"
            android:padding="11dp"
            android:drawableBottom="?android:attr/actionModeWebSearchDrawable"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <ListView
            android:id="@+id/list_vista"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"/>

    </LinearLayout>


</LinearLayout>
